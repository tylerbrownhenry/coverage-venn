{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["coverage-venn/*"]
    },
    "types": ["jest", "node"],
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "__mocks__/**/*",
    "jest.setup.ts",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}